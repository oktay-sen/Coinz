<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">
        <android.support.design.card.MaterialCardView
            android:id="@+id/wallet_card"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">
                <TextView
                    android:id="@+id/wallet_title"
                    style="@style/TextAppearance.MaterialComponents.Headline5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wallet"/>
                <TextView
                    android:id="@+id/wallet_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:layout_toEndOf="@id/wallet_title"
                    android:layout_alignBottom="@id/wallet_title"
                    android:text="10 deposits left"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="3dp"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:layout_below="@id/wallet_title">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/wallet_items"
                        android:layout_width="match_parent"
                        android:layout_height="96dp" />
                    <TextView
                        android:id="@+id/wallet_empty_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Walk around Edinburgh to find coins!"/>
                </FrameLayout>
            </RelativeLayout>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/deposit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_file_download_black_24dp"
                android:tint="@color/text_white"
                android:layout_gravity="end"
                android:layout_margin="8dp"
                android:tooltipText="Deposit"/>
        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            android:id="@+id/bank_card"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">
                <TextView
                    android:id="@+id/bank_title"
                    style="@style/TextAppearance.MaterialComponents.Headline5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:layout_below="@id/bank_title">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/bank_items"
                        android:layout_width="match_parent"
                        android:layout_height="96dp" />
                    <TextView
                        android:id="@+id/bank_empty_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="To get started, try depositing a coin from your wallet"/>
                </FrameLayout>
            </RelativeLayout>
        </android.support.design.card.MaterialCardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>